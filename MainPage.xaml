<Page
    x:Class="Assembler_for_Virtual_Processor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assembler_for_Virtual_Processor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1157*"/>
            <ColumnDefinition Width="343*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="inputBtn" Content="Pick file" Margin="443,20,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="source_path" HorizontalAlignment="Left" Margin="34,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="355"/>
        <TextBlock x:Name="content" HorizontalAlignment="Left" Margin="34,155,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="destination_path" HorizontalAlignment="Left" Margin="34,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="outputBtn" Content="Write Output" Margin="443,85,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Page>
